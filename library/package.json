{
  "name": "@cosla/sensemaking-tools",
  "version": "1.0.3",
  "description": "Tools for analyzing large-scale public input using Google's Gemini models. Provides topic identification, statement categorization, and summarization capabilities. Fork of Jigsaw's sensemaking-tools (https://github.com/Jigsaw-Code/sensemaking-tools).",
  "homepage": "https://github.com/CoslaDigital/sensemaking-tools#readme",
  "main": "src/sensemaker.ts",
  "types": "src/sensemaker.ts",
  "scripts": {
    "test": "npm run test:ts",
    "test:ts": "NODE_NO_WARNINGS=1 TFJS_NODE_GPU=false jest",
    "test:py": "python -m pytest",
    "test-gpu": "TFJS_NODE_GPU=true jest",
    "test-silent": "TFJS_NODE_GPU=false jest --silent",
    "test-watch": "TFJS_NODE_GPU=false nodemon --watch src --watch runner-cli --ext 'ts,json' -x 'npm run test-silent --onlyChanged'",
    "prepare": "husky && husky install",
    "lint": "eslint . --fix --max-warnings=0",
    "format": "prettier . --write",
    "prepublishOnly": "echo 'Publishing @cosla/sensemaking-tools'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CoslaDigital/sensemaking-tools.git"
  },
  "keywords": [
    "sensemaking",
    "gemini",
    "llm",
    "civic-tech",
    "public-input",
    "topic-identification",
    "categorization",
    "summarization",
    "vertex-ai",
    "google-cloud"
  ],
  "author": "CoslaDigital",
  "license": "ISC",
  "files": [
    "src/**/*",
    "runner-cli/**/*",
    "package.json",
    "tsconfig.json",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/papaparse": "^5.3.15",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^11.12.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.4",
    "papaparse": "^5.4.1",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.26.10",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.16.0"
  },
  "dependencies": {
    "@babel/preset-env": "^7.25.4",
    "@google-cloud/vertexai": "^1.9.0",
    "@sinclair/typebox": "^0.34.3",
    "@tensorflow/tfjs-node-gpu": "^4.22.0",
    "@tensorflow/tfjs": "^4.22.0",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "babel-jest": "^29.7.0",
    "colors": "^1.4.0",
    "csv-parse": "^5.6.0",
    "csv-writer": "^1.6.0",
    "diff": "^7.0.0",
    "marked": "^15.0.3",
    "ts-node": "^10.9.2"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx}": "prettier --write"
  }
}
